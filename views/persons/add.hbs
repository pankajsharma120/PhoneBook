

<h3>{{viewTitle}}</h3>
  {{#each person.errors }}
  <div class="alert alert-danger">
    <p>{{this}}</p>
  </div>
  {{/each}}

<form action="/person/add" method="POST" autocomplete="off" onsubmit="validateForm(); event.preventDefault();">
    <input type="hidden" name="_id" value="{{person._id}}">
    <div class="form-group">
        <label>Name</label>
        <input type="text" class="form-control" name="name" placeholder="Full Name" required>
    </div>
    <div class="form-row">
        <div class="form-group col-md-12">
            <label>DateOfBirth</label>
            <input type="text" class="form-control" name="dob" placeholder="Date Of Birth">
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-11">
            <label>Phonenumber</label>
            <input type="number" class="form-control" name="mobile0" placeholder="Mobile" required>
            <small class="invalid-feedback">Contact with this number already exist.</small>
        </div>
        <div class="form-group col-md-1 text-center">
            <span id="id_add_phn_field" class="fa fa-plus-circle" style="position: relative;top: 36px;font-size: 26px;cursor: pointer;"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-md-11">
            <label>Email</label>
            <input type="email" class="form-control" name="email0" placeholder="Email">
        </div>
        <div class="form-group col-md-1 text-center">
            <span id="id_add_email_field" class="fa fa-plus-circle" style="position: relative;top: 36px;font-size: 26px;cursor: pointer;"></span>
        </div>
    </div>
    <div class="form-group">
        <button type="submit" id="id_submitBtn" class="btn btn-info">Submit</button>
        <a class="btn btn-secondary" href="/"> View All</a>
    </div>
</form>

<script src="/js/addNewFields.js" charset="utf-8"></script>
<script src="/js/form-validation.js" charset="utf-8"></script>
